{% extends "AdminBundle::layout.html.twig" %}

{% block flashbag %}
{% for notice in app.session.flashbag.get('notice') %}
<p class="flashbag">{{ notice }}</p>
{% endfor %}
{% endblock %}

{% block title %}{{ parent() }} - Commentaire n° {{ entity.id }}{% endblock %}

{% block body %}
<div class="modal fade" id="confirm_show_delete_actu" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
   {% include 'AdminBundle:CommonBlocks:popup_confirmation.html.twig' %}
</div>
<ul class="record_actions nav nav-pills">
    <li>
        <a href="{{ path('admin.actualites.index') }}" class="btn btn-default">
            Retour
        </a>
    </li>
    <li>
        <a class="btn btn-danger a-btn-danger" href="#" data-toggle="modal" data-target="#confirm_show_delete_actu">Supprimer</a>
    </li>
</ul>
<hr>

<section class="messages_bloc">
    <strong class="subjet">{{ entity.titre }}</strong>
    <hr>
    <b class="info_tip text-muted" data-toggle="tooltip" data-placement="bottom" title="{{ entity.date|date('d/m/Y à h:m:s') }}">{{ entity.date|date('h:m') }}</b>

    <p class="message_content">
        {{ entity.texte }}
    </p>
</section>

{% endblock %}








