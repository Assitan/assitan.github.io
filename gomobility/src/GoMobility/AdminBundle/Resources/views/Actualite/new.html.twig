{% extends "AdminBundle::layout.html.twig" %}

{% block flashbag %}
{% for notice in app.session.flashbag.get('notice') %}
<p class="flashbag">{{ notice }}</p>
{% endfor %}
{% endblock %}
{% block body %}
<ul class="record_actions nav nav-pills">
	<li>
		<a href="{{ path('admin.actualites.index') }}">
			Retourner à la liste des actualités
		</a>
	</li>
</ul>
<hr>
<h3>Nouvelle actualité</h3>

<section class="col-md-7">
	<div class="clearfix style_main-section">
		<div>
			<form role="form" method="post" novalidate {{ form_enctype(form)}} novalidate>
				<div class="form-group">
					{{ form_label(form.titre, 'Titre')}}
					{{ form_widget(form.titre, {'attr':{'class':'form-control'}})}}
					<small class="errors text-danger">{{ form_errors(form.titre)}}</small> 
				</div>

				<div class="form-group clearfix">
					{{ form_label(form.texte, 'Votre Actualité')}}
					{{ form_widget(form.texte, {'attr':{'class':'form-control'}})}}
					<small class="errors text-danger">{{ form_errors(form.texte)}}</small>
				</div>		  
				<div class="form-group hidden_type">
					{{ form_widget(form.date)}}
				</div>
				{{ form_widget(form.valider, {'attr':{'class':'btn btn-info'}})}}
				{{ form_widget(form._token)}} 
			</form>
		</div>		
	</div>
</section>

{% endblock %}
