{% extends "AdminBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Modification expérience{% endblock %}

{% block body %}
<section class="col-sm-8">
	<div class="navigation">
        {{ knp_pagination_render(pagination) }} 
    </div>  

	<div class="table-responsive">
		<table class="table table-bordered table-striped">		            	
			<tbody>
				<tr>
					<th>&nbsp;</th>
					<th>Nom</th>
					<th>Email</th>
					<th>Consommation de Gaz à effet de serre</th>
					<th>Profil</th>
				</tr>
				{% for rank in pagination %}
				<tr>
					<td>{{loop.index}}</td>
					<td>{{rank.nom}}</td>
					<td><a href="mailto:{{rank.email}}">{{rank.email}}</a></td>
					<td>{{rank.ges}}</td>
					<td><a class="info_tip" href="{{ path('admin.ecoactors.show', { 'id': rank.id }) }}"><span class="glyphicon glyphicon-eye-open" data-toggle="tooltip" data-placement="right" title="voir"></span></a></td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	
	<div class="navigation">
        {{ knp_pagination_render(pagination) }} 
    </div>  
</section>
{% endblock %}

